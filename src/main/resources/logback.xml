<configuration>
    <springProperty name="rootLogLevel" source="logging.level.root" defaultValue="INFO"/>

    <!-- Define log file location -->
    <!--    <property name="LOG_PATH" value="C:\Users\1\Desktop"/>-->
    <property resource="application.properties"/>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %green(%d{yyyy-MM-dd HH:mm:ss.SSS}) [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}orders_managment.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/myapp-%d{yyyy-MM-dd}.log</fileNamePattern>
            <totalSizeCap>1GB</totalSizeCap> <!-- Set the total size cap to retain log files -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <!--    here is my attempts to adjust the level to the profile , it became the default:trace -->
        <!--    <root level="${spring.profiles.active == 'prod' ?    'ERROR' : 'INFO'}">-->
        <!--    <root level="${logging.level.root.${spring.profiles.active}}">-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
